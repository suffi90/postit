<%= render 'shared/errors', error_obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='form-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='form-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class='form-group'>
      <%= f.label :categories %>

      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label(class: 'inline checkbox') { b.check_box(class: 'checkbox') + b.text } %>
      <% end %>
    </div>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Edit Post', class: 'btn btn-primary') %>
  <% end %>
</div>